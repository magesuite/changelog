<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:MageSuite_Changelog:etc/changelog.xsd">
    <module
        id="MageSuite_Changelog"
        name="Magesuite_Changelog"
        description="This module allows to gather and display changelog entries from all compatible extensions."
        url="https://github.com/magesuite/changelog">
            <changelog>
                <tag version="1.0.0" date="2021-03-12">
                    <entry>
                        <type>INIT</type>
                        <overview>Initial release</overview>
                        <doc_reference>01_first_steps</doc_reference>
                    </entry>
                </tag>
                <tag version="1.0.1" date="2022-05-11">
                    <entry>
                        <type>FIX</type>
                        <overview>Adjusted code to be compatible with php7</overview>
                    </entry>
                </tag>
                <tag version="1.0.2" date="2022-05-17">
                    <entry>
                        <type>FIX</type>
                        <overview>Refactored xsd file to be less strict</overview>
                    </entry>
                    <entry>
                        <type>FIX</type>
                        <overview>Fixed obtaining list of nodes from XML</overview>
                    </entry>
                </tag>
                <tag version="1.0.3" date="2022-05-18">
                    <entry>
                        <type>FIX</type>
                        <overview>Corrected integration test to support different order of extensions.</overview>
                    </entry>
                </tag>
                <tag version="1.0.4" date="2022-05-25">
                    <entry>
                        <type>FIX</type>
                        <overview>Adjusted date output to use correct timezone</overview>
                    </entry>
                    <entry>
                        <type>FIX</type>
                        <overview>Fixed timerange selector</overview>
                    </entry>
                </tag>
                <tag version="1.1.0" date="2022-06-15">
                    <entry>
                        <type>FEATURE</type>
                        <overview>Added possibility to export release notes in Markdown format, so it can be easily pasted into Confluence page.</overview>
                    </entry>
                    <entry>
                        <type>FIX</type>
                        <overview>Removed unnecessary style definitions.</overview>
                    </entry>
                    <entry>
                        <type>DEFAULT</type>
                        <overview>Code refactor to use abstract controller class.</overview>
                    </entry>
                    <entry>
                        <type>DEFAULT</type>
                        <overview>Added integration tests for controllers.</overview>
                    </entry>
                </tag>
                <tag version="1.1.1" date="2022-06-17">
                    <entry>
                        <type>FIX</type>
                        <overview>Adjusted filepaths in integration tests for compability with Jenkins.</overview>
                    </entry>
                </tag>
                <tag version="1.2.0" date="2022-08-15">
                    <entry>
                        <type>FEATURE</type>
                        <overview>Support for 3rd party modules and extensions through paths in di.xml.</overview>
                        <doc_reference>03_custom_paths</doc_reference>
                    </entry>
                    <entry>
                        <type>FEATURE</type>
                        <overview>Changes from MageSuite Magento patches will now be shown in changelog.</overview>
                    </entry>
                    <entry>
                        <type>STYLE</type>
                        <overview>Updated fonts display for better reading experience.</overview>
                    </entry>
                </tag>
                <tag version="1.2.1" date="2022-08-15">
                    <entry>
                        <type>FEATURE</type>
                        <overview>Changelog can now be seen in separate page, find it in SYSTEM / MAGESUITE CHANGELOG</overview>
                    </entry>
                    <entry>
                        <type>DEFAULT</type>
                        <overview>Change default timerange to last month (instead of last week)</overview>
                    </entry>
                    <entry>
                        <type>DEFAULT</type>
                        <overview>Changelog tab is now selected by default in dashboard view.</overview>
                    </entry>
                    <entry>
                        <type>DEFAULT</type>
                        <overview>Initial form is now rendered statically, not through AJAX.</overview>
                    </entry>
                </tag>
                <tag version="1.3.0" date="2022-08-19">
                    <entry>
                        <type>FEATURE</type>
                        <overview>Possibiility to include and preview markdown files and reference it with change.</overview>
                        <doc_reference>02_adding_markown_descriptions</doc_reference>
                    </entry>
                    <entry>
                        <type>STYLE</type>
                        <overview>Refreshed feel and look of timeline view.</overview>
                    </entry>
                </tag>
                <tag version="1.3.1" date="2022-08-26">
                    <entry>
                        <type>DEFAULT</type>
                        <overview>Added MFTF functional test</overview>
                    </entry>
                </tag>
                <tag version="1.3.2" date="2022-08-30">
                    <entry>
                        <type>FIX</type>
                        <overview>Adjusted integration test</overview>
                    </entry>
                </tag>
                <tag version="1.3.4" date="2022-11-14">
                    <entry>
                        <type>FIX</type>
                        <overview>Fix JS logic in order to properly select date range using small calendar btn</overview>
                    </entry>
                </tag>
            </changelog>
    </module>
</config>
